<div class="container mt-4">
    <h2 class="mb-3">Meine Bestellungen</h2>

    <% if (userOrders.length > 0) { %>
        <ul class="list-group mb-3">
            <% userOrders.forEach(function(order) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="my-0"><%= order.product.name %></h5>
                        <small class="text-muted">Preis: <%= order.product.price %>â‚¬</small>
                    </div>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p class="text-center">Keine Bestellungen vorhanden.</p>
    <% } %>
</div>
