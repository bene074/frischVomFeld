<div class="container mt-4">
    <h2 class="mb-3">Warenkorb</h2>

    <% if (groupedBasket.length > 0) { %>
        <ul class="list-group mb-3">
            <% groupedBasket.forEach(function(item) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="my-0"><%= item.product.name %></h5>
                        <small class="text-muted">Preis: <%= item.product.price %>â‚¬</small>
                        <small class="text-muted">Anzahl: <%= item.quantity %></small>
                    </div>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p class="text-center">Der Warenkorb ist leer.</p>
    <% } %>
</div>
