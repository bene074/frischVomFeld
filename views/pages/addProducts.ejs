<div id="add-products" class="product-form-container" v-cloak>

    <form action="/product/create" method="post" class="form" enctype="multipart/form-data">
        <div>
            <label for="name" class="product-label">Product Name:</label>
            <input class="product-textarea" type="text" id="name" name="name" maxlength="100" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>
        </div>
        <div>
            <label for="price">Price:</label>
            <input class="product-textarea" type="number" id="price" name="price" step="0.01" required>
        </div>
        <div>
            <label for="availability">Available:</label>
            <input type="checkbox" id="availability" name="availability" class="checkbox-input">
        </div>
        <div>
            <label for="image">Image URL:</label>
            <input class="product-textarea" type="text" id="image" name="image" maxlength="255">
        </div>
        <button type="submit">Add Product</button>
    </form>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
